<ul>
  
<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>
  
  <ul>
  
    <li><%= link_to 'Logout', logout_path, method: :delete %></li>

  </ul>

  <h1>タスク一覧</h1>

  <ul>
    <% @tasks.each do |task| %>
      <li><%= link_to task.id, task %> : <%= task.content %> &gt; <%= task.status %></li>
    <% end %>
  </ul>

  <%= link_to '新規タスクの投稿', new_task_path %>

<% else %>

  <li><%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %></li>
  <li><%= link_to 'Login', login_path, class: 'nav-link' %></li>

<% end %>
